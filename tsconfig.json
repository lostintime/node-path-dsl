{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}