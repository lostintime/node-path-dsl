{
  "name": "path-dsl",
  "version": "0.2.0",
  "description": "Path Parsing DSL",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "clean": "rimraf dist && rimraf coverage && rimraf .nyc_output",
    "test": "mocha --opts mocha.opts",
    "test:watch": "mocha --opts mocha.opts --watch",
    "test:prod": "yarn run lint && nyc mocha --opts mocha.opts --reporter dot",
    "prebuild": "yarn run clean",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:lostintime/node-path-dsl.git"
  },
  "keywords": [
    "path"
  ],
  "author": "lostintime.dev@gmail.com",
  "license": "Apache-2.0",
  "homepage": "https://github.com/lostintime/node-path-dsl",
  "dependencies": {
    "funfix-core": "^7.0.1",
    "typematcher": "^0.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^7.0.0",
    "chai": "^4.1.2",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "ts-node": "^8.8.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "json",
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
